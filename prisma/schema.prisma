// === DATASOURCE: Postgres via Vercel Postgres (DATABASE_URL i env) ===
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// === GENERATOR: exakt EN klientgenerator ===
generator client {
  provider = "prisma-client-js"
}

// === MODELS ===
model Session {
  id            String   @id
  shop          String
  state         String
  isOnline      Boolean  @default(false)
  scope         String?
  expires       DateTime?
  accessToken   String
  userId        BigInt?
  firstName     String?
  lastName      String?
  email         String?
  accountOwner  Boolean  @default(false)
  locale        String?
  collaborator  Boolean? @default(false)
  emailVerified Boolean? @default(false)
  
}

model ShopSettings {
  shop       String   @id
  feedSecret String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
